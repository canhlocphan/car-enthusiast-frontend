{
  "name": "car-enthusiast-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint-staged:eslint": "eslint --cache --fix --ext .js,.jsx",
    "lint-staged:style": "stylelint --fix --syntax scss",
    "lint-staged:prettier": "prettier -c --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,scss,md,json}": [
      "npm run lint-staged:prettier",
      "git add"
    ],
    "**/*.{js,jsx}": [
      "npm run lint-staged:eslint",
      "git add"
    ],
    "**/*.scss": [
      "npm run lint-staged:style",
      "git add"
    ]
  },
  "dependencies": {
    "next": "12.2.2",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "eslint": "^8.19.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "12.2.2",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "4.3.8",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "stylelint": "^14.9.1",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-prettier": "^2.0.0"
  }
}
